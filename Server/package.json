{
  "name": "jbchat-server",
  "version": "0.1.0",
  "description": "Server application for the JBChat environment",
  "main": "dist/index.js",
  "scripts": {
    "start": "node .",
    "build": "tsc",
    "watch": "tsc -w",
    "clean": "rm -rvf dist",
    "dev": "concurrently \"tsc -w\" \"nodemon dist/index.js\"",
    "test": "mocha test",
    "docker:build": "docker build -t jbchat:latest-server .",
    "docker:run": "docker run -d -p 3000:3000 jbchat:latest-server"
  },
  "keywords": [
    "programming",
    "learning",
    "sockets",
    "docker"
  ],
  "author": {
    "name": "Jay Cuevas",
    "email": "cuevasj@usf.edu",
    "url": "https://github.com/JayCuevas"
  },
  "contributors": [
    {
      "email": "bjoud@usf.edu",
      "name": "Bilal Joud",
      "url": "https://github.com/bilaljoud"
    }
  ],
  "license": "GPL",
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/socket.io": "^2.1.12",
    "@types/uuid": "^8.3.0",
    "chai": "^4.2.0",
    "concurrently": "^5.3.0",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.6",
    "socket.io-client": "^2.3.1",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "socket.io": "^2.3.0",
    "uuid": "^8.3.2"
  }
}
